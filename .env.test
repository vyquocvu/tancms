# TanCMS Test Environment Configuration
# This template is optimized for running tests

# Environment
NODE_ENV="test"

# Database Configuration (In-memory SQLite for tests)
DATABASE_URL="file::memory:?cache=shared"

# Authentication (Test-specific)
AUTH_SECRET="test-secret-key-for-testing-only-not-secure"

# Application Configuration
APP_URL="http://localhost:3001"
PORT="3001"

# Test-specific Database Options
DATABASE_LOGGING="false"
DATABASE_POOL_SIZE="1"

# Mock S3 Storage (for testing)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="testkey"
S3_SECRET_ACCESS_KEY="testsecret"
S3_BUCKET="test-bucket"

# Mock Email Configuration
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER="test"
SMTP_PASS="test"
SMTP_FROM="test@example.com"

# Test Configuration
TEST_TIMEOUT="30000"
ENABLE_LOGGING="false"
LOG_LEVEL="error"

# Disable external services in tests
VERCEL_ANALYTICS_ID=""
PRISMA_ACCELERATE_URL=""
ENABLE_CORS="true"

# Test API Configuration
API_RATE_LIMIT_WINDOW="60000"
API_RATE_LIMIT_MAX="1000"

# Test Features
ENABLE_TEST_ROUTES="true"
MOCK_EXTERNAL_SERVICES="true"