# TanCMS Production Environment Configuration
# This template is optimized for production deployments

# Environment
NODE_ENV="production"

# Database Configuration (PostgreSQL with connection pooling)
DATABASE_URL="postgresql://username:password@prod-db-host:5432/tancms_production"

# Authentication
# CRITICAL: Generate a secure random string (64+ characters for production)
AUTH_SECRET="your-ultra-secure-production-auth-secret-must-be-changed"

# Application Configuration
APP_URL="https://yourdomain.com"

# Security (Required for Production)
SECURE_HEADERS="true"
FORCE_HTTPS="true"
ENABLE_CORS="false"
COOKIE_SECURE="true"
COOKIE_SAME_SITE="strict"

# Performance & Caching
CACHE_TTL="3600"
ENABLE_COMPRESSION="true"
STATIC_CACHE_TTL="86400"

# Database Configuration (Production)
DATABASE_POOL_SIZE="20"
DATABASE_CONNECTION_TIMEOUT="30000"
DATABASE_SSL="true"

# Required: S3-compatible Storage
S3_ENDPOINT="https://your-production-s3-endpoint.com"
S3_ACCESS_KEY_ID="your-production-access-key"
S3_SECRET_ACCESS_KEY="your-production-secret-key"
S3_BUCKET="tancms-production"
S3_REGION="us-east-1"
S3_CDN_URL="https://cdn.yourdomain.com"

# Recommended: Prisma Accelerate (for serverless optimization)
PRISMA_ACCELERATE_URL="prisma://your-production-accelerate-url"

# Email Configuration (production mail service)
SMTP_HOST="smtp.production-mail-service.com"
SMTP_PORT="587"
SMTP_USER="your-production-smtp-user"
SMTP_PASS="your-production-smtp-password"
SMTP_FROM="noreply@yourdomain.com"

# Analytics & Monitoring
VERCEL_ANALYTICS_ID="your-production-analytics-id"
ENABLE_LOGGING="true"
LOG_LEVEL="warn"
ERROR_REPORTING="true"

# API Configuration
API_RATE_LIMIT_WINDOW="900000"
API_RATE_LIMIT_MAX="1000"
API_TIMEOUT="30000"

# Production Deployment
DEPLOYMENT_ENV="production"
BUILD_TARGET="vercel"

# Health Checks
HEALTH_CHECK_ENDPOINT="/api/health"
HEALTH_CHECK_TIMEOUT="5000"

# Backup & Recovery
BACKUP_RETENTION_DAYS="30"
ENABLE_AUTOMATED_BACKUPS="true"