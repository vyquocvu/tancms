# TanCMS Staging Environment Configuration
# This template is optimized for staging/preview deployments

# Environment
NODE_ENV="staging"

# Database Configuration (PostgreSQL recommended)
DATABASE_URL="postgresql://username:password@staging-db-host:5432/tancms_staging"

# Authentication
# CRITICAL: Generate a secure random string (32+ characters)
AUTH_SECRET="your-secure-staging-auth-secret-change-me"

# Application Configuration
APP_URL="https://staging.yourdomain.com"

# Security Headers
SECURE_HEADERS="true"
FORCE_HTTPS="true"

# Performance & Caching
CACHE_TTL="300"
ENABLE_COMPRESSION="true"

# Staging-specific Database Options
DATABASE_POOL_SIZE="10"
DATABASE_CONNECTION_TIMEOUT="30000"

# Required: S3-compatible Storage
S3_ENDPOINT="https://your-staging-s3-endpoint.com"
S3_ACCESS_KEY_ID="your-staging-access-key"
S3_SECRET_ACCESS_KEY="your-staging-secret-key"
S3_BUCKET="tancms-staging"
S3_REGION="us-east-1"

# Optional: Prisma Accelerate (recommended for serverless)
# PRISMA_ACCELERATE_URL="prisma://your-staging-accelerate-url"

# Email Configuration (staging mail service)
SMTP_HOST="smtp.staging-mail-service.com"
SMTP_PORT="587"
SMTP_USER="your-staging-smtp-user"
SMTP_PASS="your-staging-smtp-password"
SMTP_FROM="noreply@staging.yourdomain.com"

# Analytics & Monitoring
# VERCEL_ANALYTICS_ID="your-staging-analytics-id"
ENABLE_LOGGING="true"
LOG_LEVEL="info"

# API Configuration
API_RATE_LIMIT_WINDOW="900000"
API_RATE_LIMIT_MAX="100"

# Staging Deployment
DEPLOYMENT_ENV="staging"
BUILD_TARGET="vercel"